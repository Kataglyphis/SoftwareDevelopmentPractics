<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
    <useControls fileName="adu.kit.edu.kit.edu.kit.valaris/profiling/interval-box.xml"/>

    <controlDefinition name="profiledisplay" controller="edu.kit.edu.kit.valaris.profiling.ProfileDisplay">
        <panel id="#backdrop" backgroundColor="#000a" childLayout="vertical">
            <!--label displaying the name of the profiled thread-->
            <panel id="#label-backdrop" width="100%" height="25%" backgroundColor="#0000" childLayout="center">
                <text id="#label" align="left" valign="center" font="$font" text="$title" />
            </panel>

            <!--used to display units of measure for the profiling result-->
            <panel id="#scale" width="100%" height="25%" backgroundColor="#0000"/>

            <!--displays the sections as boxes with a label stacked horizontally-->
            <panel id="#content" width="100%" height="50%" backgroundColor="#0000" childLayout="horizontal"/>
        </panel>
    </controlDefinition>
</nifty-controls>