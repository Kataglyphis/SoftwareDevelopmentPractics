<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
    <!-- ++++++++ -->
    <!-- vertical -->
    <!-- ++++++++ -->
    <style id="nifty-vertical-scrollbar#panel">
        <attributes childLayout="vertical" width="23px" align="center" focusable="true"/>
    </style>
    <style id="nifty-vertical-scrollbar#up">
        <attributes filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" width="23px" height="23px" imageMode="sprite:100,100,3"/>
        <effect>
            <onClick name="focus" targetElement="#parent"/>
            <onClick name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" imageMode="sprite:100,100,5" post="true"/>
            <onHover name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" imageMode="sprite:100,100,4" post="true"/>
            <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150"/>
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150"/>
        </effect>
    </style>
    <style id="nifty-vertical-scrollbar#down">
        <attributes filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" width="23px" height="23px" imageMode="sprite:100,100,0"/>
        <effect>
            <onClick name="focus" targetElement="#parent"/>
            <onClick name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" imageMode="sprite:100,100,2" post="true"/>
            <onHover name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" imageMode="sprite:100,100,1" post="true"/>
            <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150"/>
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150"/>
        </effect>
    </style>
    <style id="nifty-vertical-scrollbar#background">
        <attributes filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" width="23px" height="*" childLayout="absolute"
                    imageMode="sprite:100,100,12"/>
        <effect>
            <onClick name="focus" targetElement="#parent"/>
        </effect>
    </style>
    <style id="nifty-vertical-scrollbar#position">
        <attributes filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" x="0px" y="0px" width="23px" height="8px"
                    imageMode="sprite-resize:100,100,13,4,15,4,4,4,15,4,15,4,15,4,4" childLayout="center"/>
        <effect>

            <onClick name="focus" targetElement="#parent#parent"/>
            <onFocus name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png"
                     imageMode="sprite-resize:100,100,14,4,15,4,4,4,15,4,15,4,15,4,4" post="true"/>
            <onHover name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png"
                     imageMode="sprite-resize:100,100,14,4,15,4,4,4,15,4,15,4,15,4,4" post="true"/>
            <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150"/>
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150"/>
        </effect>
    </style>

    <!-- ++++++++++ -->
    <!-- horizontal -->
    <!-- ++++++++++ -->
    <style id="nifty-horizontal-scrollbar#panel">
        <attributes childLayout="horizontal" height="23px" align="center" focusable="true"/>
    </style>
    <style id="nifty-horizontal-scrollbar#left">
        <attributes filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" width="23px" height="23px" imageMode="sprite:100,100,6"/>
        <effect>
            <onClick name="focus" targetElement="#parent"/>
            <onClick name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" imageMode="sprite:100,100,8" post="true"/>
            <onFocus name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" imageMode="sprite:100,100,7" post="true"/>
            <onHover name="border" color="#822f" post="true"/>
            <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150"/>
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150"/>
        </effect>
    </style>
    <style id="nifty-horizontal-scrollbar#right">
        <attributes filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" width="23px" height="23px" imageMode="sprite:100,100,9"/>
        <effect>
            <onClick name="focus" targetElement="#parent"/>
            <onClick name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" imageMode="sprite:100,100,11" post="true"/>
            <onFocus name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" imageMode="sprite:100,100,10" post="true"/>
            <onHover name="border" color="#822f" post="true"/>
            <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150"/>
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150"/>
        </effect>
    </style>
    <style id="nifty-horizontal-scrollbar#background">
        <attributes filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" width="*" height="23px" childLayout="absolute"
                    imageMode="sprite-resize:100,100,16,4,15,4,4,4,15,4,15,4,15,4,4"/>
        <effect>
            <onClick name="focus" targetElement="#parent"/>
        </effect>
    </style>
    <style id="nifty-horizontal-scrollbar#position">
        <attributes filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" x="0px" y="0px" width="8px" height="23px"
                    imageMode="sprite-resize:100,100,17,4,15,4,4,4,15,4,15,4,15,4,4"/>
        <effect>
            <onActive name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png" width="8px" height="7px"
                      imageMode="subImage:490,8,8,7" post="true" overlay="true" center="true"
                      hideIfNotEnoughSpace="true"/>
            <onClick name="focus" targetElement="#parent#parent"/>
            <onFocus name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png"
                     imageMode="sprite-resize:100,100,19,4,15,4,4,4,15,4,15,4,15,4,4" post="true"/>
            <onHover name="imageOverlay" filename="edu/kit/valaris/menuSkin/Bilder/DropDown/scrollbar.png"
                     imageMode="sprite-resize:100,100,18,4,15,4,4,4,15,4,15,4,15,4,4" post="true"/>
            <onEnabled name="renderQuad" startColor="#2228" endColor="#2220" post="true" length="150"/>
            <onDisabled name="renderQuad" startColor="#2220" endColor="#2228" post="true" length="150"/>
        </effect>
    </style>
</nifty-styles>
